<form>
    <div class="container">
        <div class="paperDollImage">
            {{#each itemTypesArray}}
                <div class="{{leftOrRight @index}}">
                    <select class="selector" name="{{this}}">
                        <option {{startingSelection this ../selectedItems}} value="" disabled>Select {{this}}</option>
                        {{#each ../items}}
                            <option {{shouldBeSelected this.data._id ../this ../../selectedItems}} value="{{this.data._id}}">
                                {{this.data.name}}
                            </option>
                        {{/each}}
                    </select>
                </div>
            {{/each}}
        </div>
        <div>
            {{#times 2}}
                <div>
                    <select class="selector" name="{{this}}">
                        <option value="" disabled selected>Select your option</option>
                    </select>
                </div>
            {{/times}}
        </div>
    </div>
    <button type="submit">Submit</button>
</form>