<form>
  <div class="tagsEditApp__container">
    <div class="form-fields tagsEditApp__creater">
      <div class="tagsEditApp__slot-number-selector">
        <input name="number-input" type="range" min="1" max="4" value="1">
        <span class="range-value">1</span>
      </div>

      <div class="tagsEditApp__slot-dropdown">
        <select class="tagsEditApp__slot-select" name="slot-type" id="slot-type">
          {{#each availableSlots}}
            <option value="{{this}}">
              {{this}}
            </option>
          {{/each}}
        </select>
      </div>
    </div>

    <button class="tagsEditApp__add-flag-button">Add flag</button>

    <div class="tagsEditApp__flag-container">
      {{#each currentFlags}}
        <div class="tagsEditApp__flag-wrapper">
          <div class="tagsEditApp__flag-tile">{{this}}</div>
          <button class="tagsEditApp__remove-flag" id="{{this}}">X</button>
        </div>
      {{/each}}
    </div>
  </div>

</form>